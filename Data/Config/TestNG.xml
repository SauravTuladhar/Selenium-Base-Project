<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!--        mvn clean test -DsuiteXmlFile=Data/Config/TestNG.xml-->
<suite name="Recht Direct Automation">
    <parameter name="configFile" value="TestData.xml"/>
    <parameter name="browserName" value="chrome"></parameter>
    <listeners>
        <listener class-name="Tests.WebDriverListener"></listener>
        <listener class-name="Tests.Utilities.ExtentListner.ExtentListnerClass"></listener>
        <listener class-name="Tests.Utilities.SuiteListner.SuiteListnerClass"></listener>
    </listeners>
    <test name="Login Test">
        <classes>
            <class name="Tests.LoginTest.LoginPageTest">
                <methods>
                    <include name="login_Test"/>
                </methods>
            </class>
            <class name="Tests.LoginTest.RegistrationPageTest">
                <methods>
                    <include name="registration_Test"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
